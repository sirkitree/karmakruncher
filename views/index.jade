extends layout

block body
  
  div.navbar
    div.navbar-inner
      a.brand(href="/") KarmaKruncher
    

  div.container
    h3 Lullabot Karma
    div.insight.hero-unit
      
      sidebar

      div(ng-controller="KarmaKtrl").table-wrapper
        table.table.table-hover
          thead
            tr
              th #
              th Nick
              th Karma
            
          tbody
            <!-- ngRepeat: row in data -->
            tr(class="bot", ng-repeat="nick in nicks")
              td {{$index+1}}
              td {{nick.name}} 
              td {{nick.karma}}
    p.center 
      i This is an aggregation of all the karma across our various bots in our various chat rooms in IRC.
    p.center
      i To modify or help improve, please send pull requests to 
      a(href='https://github.com/sirkitree/karmakruncher', title='github') https://github.com/sirkitree/karmakruncher
      .

  script(src="http://d3js.org/d3.v3.min.js")
  script(src='js/chart.js')
  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/controllers.js')